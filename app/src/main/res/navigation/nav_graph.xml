<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/equipoFragment">

    <fragment
        android:id="@+id/equipoFragment"
        android:name="es.iesagora.generador_de_cartas.EquipoFragment"
        android:label="@string/tu_equipo"
        tools:layout="@layout/fragment_equipo" >
        <action
            android:id="@+id/action_equipoFragment_to_detallesFragment2"
            app:destination="@id/detallesFragment" />
    </fragment>
    <fragment
        android:id="@+id/pokedexFragment"
        android:name="es.iesagora.generador_de_cartas.PokedexFragment"
        android:label="@string/pokedex"
        tools:layout="@layout/fragment_pokedex" >
        <action
            android:id="@+id/action_pokedexFragment_to_detallesFragment"
            app:destination="@id/detallesFragment" />
    </fragment>
    <fragment
        android:id="@+id/generadorFragment"
        android:name="es.iesagora.generador_de_cartas.GeneradorFragment"
        android:label="@string/generador"
        tools:layout="@layout/fragment_generador" />
    <fragment
        android:id="@+id/detallesFragment"
        android:name="es.iesagora.generador_de_cartas.DetallesFragment"
        android:label="@string/detalles"
        tools:layout="@layout/fragment_detalles" >
        <argument
            android:name="detalles"
            app:argType="es.iesagora.generador_de_cartas.model.Pokemon" />
    </fragment>
</navigation>


